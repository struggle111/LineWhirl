<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.baiyuanwei.linewhirl.view.WhirlSquareLineViewV3
        android:id="@+id/whirl_square_line_view"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:padding="12dp">

        <Button
            android:id="@+id/start_anim_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp"
            android:layout_weight="1"
            android:text="start anim"
            android:textAllCaps="false"
            android:textColor="#000"
            android:textStyle="bold" />

        <Button
            android:id="@+id/cancel_anim_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_weight="1"
            android:text="cancel anim"
            android:textAllCaps="false"
            android:textColor="#000"
            android:textStyle="bold" />

        <Button
            android:id="@+id/end_anim_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_weight="1"
            android:text="end anim"
            android:textAllCaps="false"
            android:textColor="#000"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>
